<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form" xmlns:layout="sap.ui.layout">
	<Popover
		title="{= ${requis>FirstName} + $ + ${requis>SecondName} + Profiles}"
		class="sapUiContentPadding"
		placement="Bottom">
		<layout:HorizontalLayout>
			<Image src="{requis>Image}"/>
			<Text text= "{i18n>popoverText}"/>
		</layout:HorizontalLayout>
		<List items="{requis>ProfileCollection/}" >
		<CustomListItem>
			<HBox>
				<Link text="{requis>ProfDet/Title}" target="{requis>ProfDet/Link}" press="handleLinkPress"/>
				<Image src="{requis>ProfDet/Picture}"/>
			</HBox>
		</CustomListItem>
	</List>
	</Popover>
</core:FragmentDefinition>