<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="manage_vacancy.controller.MasterVacancy"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:semantic="sap.m.semantic" id="master">
	<semantic:MasterPage
			id="mastervac"
			title="{i18n>title} ({requis>/JobRequisCollection/length})">
		<semantic:subHeader>
			<Bar id="headerBar">
				<contentLeft>
					<SearchField
							id="searchVac"
							width="100%"
							search="onSearchVac">
					</SearchField>
				</contentLeft>
			</Bar>
		</semantic:subHeader>
		
		<semantic:content>
			<!-- For client side filtering add this to the items attribute:  parameters: {operationMode: 'Client'}}" -->
			<List
					id="reqlist"
					items="{requis>/JobRequisCollection}"
					mode="SingleSelectMaster"
					updateFinished="onUpdateFinished"
					selectionChange="onReqSelected">
				<items>
					<ObjectListItem
							press="onSelectionChange"
							icon="sap-icon://product"
							title="{requis>Position}">
						<attributes>
			    			<ObjectAttribute text = "{requis>Location}"/>		      
			    		</attributes>
			    		<firstStatus>
			    			<ObjectStatus 
			        			text = "{requis>ReqId}"
			        			state = "{None}"/>
			    		</firstStatus>
			    		<secondStatus>
			    			<ObjectStatus text = "{requis>Status}"
			    						  state = "{path: 'requis>Status',
													formatter: 'manage_vacancy.util.formatter.formatReqStatus'}"/>
			    		</secondStatus>
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
	</semantic:MasterPage>
</mvc:View>