<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml">
	<Table id="idSkills"
		   items="{requis>RequisSkillsCollection}">
		<columns>
			<Column hAlign="Left">
				<Text text="{i18n>skillName}"/>
			</Column>
			<Column hAlign="Right">
			</Column>
			<Column hAlign="Left">
				<Text text="{i18n>weight}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{requis>Skill}" />
					<Slider min="0" max="100" value="{requis>Weight}"/>
					<ObjectNumber number="{requis>Weight}" unit="%"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>