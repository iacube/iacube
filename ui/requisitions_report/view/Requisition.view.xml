<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:uxap="sap.uxap" xmlns="sap.m"
	controllerName="requisitions_report.controller.Requisition"
	xmlns:layout="sap.ui.layout" xmlns:common="iacube.ui.common" xmlns:mc="sap.suite.ui.microchart"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Job Requisition">
		<content>
			<uxap:ObjectPageLayout id="detObj"
				showTitleInHeaderContent="false">
				<uxap:headerTitle>
					<uxap:ObjectPageHeader objectTitle="{ui>Title} ({ui>ReqId})">
						<uxap:breadCrumbsLinks>
							<Link text="Job Requisitions Report: by Status" press="handleLink1Press" />
						</uxap:breadCrumbsLinks>
					</uxap:ObjectPageHeader>
				</uxap:headerTitle>
<!-- 				<uxap:headerContent>
					<layout:VerticalLayout width="5%"></layout:VerticalLayout>
					<layout:VerticalLayout>
						<ObjectStatus title="{i18n>req.detail.location}"
							text="{ui>Location}" />
						<ObjectStatus title="{i18n>req.detail.project}" text="{ui>ProjectId}" />
					</layout:VerticalLayout>
					<layout:VerticalLayout width="40%"></layout:VerticalLayout>
					<layout:VerticalLayout>
						<ObjectStatus title="{i18n>req.detail.created}" text="{ui>CreatedAt}" />
						<FlexBox alignContent="End" justifyContent="End">
							<ObjectStatus text="{ui>StatusCodeId}" state="Success" />
						</FlexBox>
						<layout:VerticalLayout></layout:VerticalLayout>
						<FlexBox alignContent="End" justifyContent="End">
							<Select></Select>
						</FlexBox>
					</layout:VerticalLayout>
				</uxap:headerContent> -->
				<uxap:sections>
					<uxap:ObjectPageSection id="detInfo"
						title="{i18n>req.detail.info}" titleUppercase="false">
						<uxap:subSections>
							<uxap:ObjectPageSubSection title="">
								<uxap:blocks>
									<common:InfoForm formEditable="false"/>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
					<uxap:ObjectPageSection id="detSkills"
						title="{i18n>req.detail.skills}" titleUppercase="false">
						<uxap:subSections>
							<uxap:ObjectPageSubSection title="{i18n>req.detail.skills}">
								<uxap:blocks>
									<common:SkillsTable/>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
					<uxap:ObjectPageSection id="detCandidates" title="{i18n>candidates}" 
						titleUppercase="false">
						<uxap:subSections>
							<uxap:ObjectPageSubSection title="">
								<uxap:blocks> 
									<Table id="idCandidates" items="{ui>candidates}">
										<columns>
											<Column hAlign="Left">
												<Text text="{i18n>cand.tab.firstName}"/>
											</Column>
											<Column hAlign="Left">
												<Text text="{i18n>cand.tab.lastName}"/>
											</Column>
											<Column hAlign="Left">
												<Text text="{i18n>cand.tab.experience}"/>
											</Column>
											<Column hAlign="Left">
												<Text text="{i18n>cand.tab.link}"/>
											</Column>
											<Column hAlign="Left">
												<Text text="{i18n>cand.tab.overDist}"/>
											</Column>
											<Column hAlign="Left">
												<Text text="{i18n>cand.tab.status}"/>
											</Column>
											<Column hAlign="Left">
												<Text text="{i18n>cand.tab.lastChanges}"/>
											</Column>
										</columns>
										<items>
											<ColumnListItem type="Navigation">
												<cells>
													<Text text="{ui>FirstName}"/>
													<Text text="{ui>LastName}"/>
													<Text text="{ui>Experience}"/>
													<core:Icon src="sap-icon://globe"
															   color="#6495ED"
															   press="handleIconPress"/>
													<ProgressIndicator percentValue="{ui>Distance}" showValue="true" 
											          state="Success" height="1.5rem" width="80%" displayValue="{ui>Distance} %"/>
											        <ObjectStatus text="{ui>StatusId}" state="Success" />
											        <Text text="{model: 'ui', path: 'ChangedAt', type:'sap.ui.model.type.Date', formatOptions: {style:'medium'}}"/> 
												</cells>
											</ColumnListItem>
										</items>
									</Table>
								</uxap:blocks>
							</uxap:ObjectPageSubSection> 
						</uxap:subSections>
					</uxap:ObjectPageSection>
				</uxap:sections>
			</uxap:ObjectPageLayout>
		</content>
	</Page>
</mvc:View>