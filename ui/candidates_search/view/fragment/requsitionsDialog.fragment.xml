    <core:FragmentDefinition
    	xmlns="sap.m"
    	xmlns:core="sap.ui.core">
    	<SelectDialog
    		noDataText="{i18n>cand.reqDialog.NoData}"
    		contentHeight ="300px"
    		title="{i18n>cand.reqDialog.Title}"
    		search="handleReqSearch"
    		confirm="onConfirmAssignment"
    		close="handleClose"
    		items="{
    			path: '/openRequisitions'
    		}" >
    		<StandardListItem
    			title="{Title}"
    			description="{ReqId} , {ProjectId}"
    			icon="sap-icon://product"
    			iconDensityAware="false"
    			iconInset="false"
    			type="Active" />
    	</SelectDialog>
    </core:FragmentDefinition>