<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover title="{i18n>cand.page.popover.title}"
		placement="Bottom">
		<content>
			<List id="cand_page_popover_profiles_list" mode="SingleSelectMaster" includeItemInSelection="true"
				select="handleItemSelect" items="{ui>profiles}">
				<CustomListItem>
					<HBox alignItems="Start" class="sapUiTinyMargin">
						<Text width="100%" text="{ui>ProfileName}">
							<layoutData>
								<FlexItemData growFactor="1" />
							</layoutData>
						</Text>
						<Text width="100%" text="{ui>Location} / {ui>Headline}"
							class="sapUiSmallMarginBeginEnd">
							<layoutData>
								<FlexItemData growFactor="1" />
							</layoutData>
						</Text>
						<Link width="100%" text="{ui>Link}">
							<layoutData>
								<FlexItemData growFactor="1" />
							</layoutData>
						</Link>
					</HBox>
				</CustomListItem>
			</List>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer />
				<Button text="{i18n>cand.page.popover.choose}" press="onProfileSelected" />
				<ToolbarSpacer />
			</Toolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>